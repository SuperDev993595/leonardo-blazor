@using MudBlazor

<div class="header-bar">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="OnToggleClick" aria-label="Toggle sidebar" class="header-bar-menu" />
    <div class="header-bar-spacer"></div>
    <div class="header-bar-search">
        <AuthInput @bind-Value="_searchText"
                   Placeholder="Buscar"
                   Type="text"
                   BackgroundColor="#faf0d2"
                   OutlineColor="#cec497"
                   BorderRadius="0.375rem"
                   Height="2.5rem">
            <LeftIcon>
                <MudIcon Icon="@Icons.Material.Filled.Search" Size="Size.Small" />
            </LeftIcon>
        </AuthInput>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnToggleSidebar { get; set; }

    private string _searchText = string.Empty;

    private async Task OnToggleClick() => await OnToggleSidebar.InvokeAsync();
}
