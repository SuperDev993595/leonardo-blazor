@using MudBlazor
@rendermode InteractiveServer
@inject IJSRuntime JS

<div class="header-bar">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="ToggleSidebar" aria-label="Toggle sidebar" class="header-bar-menu" />
    <div class="header-bar-spacer"></div>
    <div class="header-bar-search">
        <AuthInput @bind-Value="_searchText"
                   Placeholder="Buscar"
                   Type="text"
                   BackgroundColor="#faf0d2"
                   OutlineColor="#cec497"
                   BorderRadius="1.0rem"
                   Height="2.0rem">
            <LeftIcon>
                <MudIcon Icon="@Icons.Material.Filled.Search" Size="Size.Small" />
            </LeftIcon>
        </AuthInput>
    </div>
</div>

@code {
    private string _searchText = string.Empty;

    private async Task ToggleSidebar() =>
        await JS.InvokeVoidAsync("toggleSidebar");
}
